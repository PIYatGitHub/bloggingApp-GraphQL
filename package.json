{
  "name": "graphql-basics",
  "version": "1.0.0",
  "description": "An intro to the wonderful world of GraphQL",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "heroku-postbuild": "babel src --out-dir dist --copy-files",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js --exec babel-node -e graphql,js",
    "test": "jest --watch",
    "get-schema": "graphql get-schema -p prisma --dotenv config/dev.env"
  },
  "jest": {
    "globalSetup":"./tests/jest/globalSetup.js",
    "globalTeardown":"./tests/jest/globalTeardown.js"
  },
  "keywords": [
    "GraphQL"
  ],
  "author": "Peter Iv. Y.",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "env-cmd": "^9.0.3",
    "graphql-cli": "^3.0.12",
    "graphql-yoga": "^1.18.0",
    "jsonwebtoken": "^8.5.1",
    "prisma-binding": "^2.3.15"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nodemon": "^1.19.1"
  }
}
